<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CustomerFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardMaxElevation="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/pizzapic"
        android:backgroundTintMode="src_over"
        android:backgroundTint="#B2000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSignUpTitleCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/text_sign_up_customer"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextFirstNameCustomer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="#919090"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/edit_text_first_name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextLastNameCustomer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="#919090"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/edit_text_last_name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextEmailCustomer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="#919090"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/edit_text_email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextPhoneCustomer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textColorHint="#919090"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/edit_text_phone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editTextPasswordCustomer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="#919090"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/edit_text_password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/buttonAddProfilePictureCustomer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="?android:attr/colorBackground"
                android:text="@string/button_add_profile_picture"
                android:textColor="?android:attr/textColorTertiary"
                app:rippleColor="?android:attr/colorActivatedHighlight" />

            <ImageView
                android:id="@+id/profilepicManager"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/customer_icon" />

            <Button
                android:id="@+id/buttonCreateAccountCustomer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/button_create_account"
                android:textColor="@color/colorOnPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/buttonCancelCustomer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="?android:attr/colorBackground"
                android:text="@string/button_cancel"
                android:textColor="?android:attr/textColorTertiary"
                app:rippleColor="?android:attr/colorActivatedHighlight" />

        </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>