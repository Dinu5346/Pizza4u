<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pizzaLayout"
    android:layout_marginTop="5dp">



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="120dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:background="#EFEFEF">


            <EditText
                android:id="@+id/txt_PType_manager"
                android:layout_width="252dp"
                android:layout_height="48dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/belleza"
                android:text="Non-Veg"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagePizzaManager" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/belleza"
                android:text="Type : "
                android:textSize="17dp"
                app:layout_constraintTop_toBottomOf="@id/txtPizzaNameManager"
                app:layout_constraintTop_toEndOf="@id/imagePizzaManager"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/belleza"
                android:text="Price : "
                android:textSize="17dp"
                app:layout_constraintTop_toBottomOf="@id/txt_PType_manager"
                app:layout_constraintTop_toEndOf="@id/imagePizzaManager"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/txt_Price_manager"
                android:layout_width="151dp"
                android:layout_height="49dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/belleza"
                android:text="1700"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/txt"
                app:layout_constraintTop_toBottomOf="@id/txt_PType_manager" />

            <EditText
                android:id="@+id/txtPizzaNameManager"
                android:layout_width="378dp"
                android:layout_height="39dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/belleza"
                android:text="@string/text_pizza"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imagePizzaManager"
                app:layout_constraintTop_toEndOf="@id/imagePizzaManager"
                tools:layout_editor_absoluteX="1dp" />

            <ImageView
                android:id="@+id/imagePizzaManager"
                android:layout_width="376dp"
                android:layout_height="118dp"
                android:layout_marginEnd="170dp"
                android:scaleType="centerCrop"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/pizzapic"
                android:focusable="true" />

            <EditText
                android:id="@+id/txtPizzaDescriptionManager"
                android:layout_width="374dp"
                android:layout_height="97dp"
                android:layout_marginStart="1dp"
                android:ems="10"
                android:gravity="start|top"
                android:text="@string/pizza_description"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@id/txtPizzaNameManager"
                app:layout_constraintTop_toBottomOf="@id/txt_Price_manager" />

            <Button
                android:id="@+id/btnSave_manager_pizza"
                android:layout_width="94dp"
                android:layout_height="51dp"
                android:layout_marginStart="264dp"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:gravity="center"
                android:text="Save"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="@id/txtPizzaNameManager"
                app:layout_constraintTop_toBottomOf="@id/txtPizzaDescriptionManager" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>